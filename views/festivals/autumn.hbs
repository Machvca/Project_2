<div class="container">

  <h1>AUTUMN</h1>
  <div class="row row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 my-5">
    {{! image name status }}
    {{#each festivalsAutumn}}
      <div class="col">
        <div class="card border-0">
          <img src="{{image}}" alt="" />
          <p>{{name}}</p>
          <p>{{date}}</p>
          <p>{{location}}</p>
          <p>{{description}}</p>
          <p>Price: {{price}}€</p>

          <form action="/add-favorite" method="POST">
            <input type="hidden" name="apiId" value={{id}}>
            <button type="submit button" class="btn btn-outline-secondary">Añadir a favoritos</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>